generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Form {
  id      String     @id @default(uuid())
  name    String     @unique
  ownerId String
  order   Int        @default(autoincrement())
  style   Json?
  items   FormItem[]
}

model FormItem {
  id      String   @id @default(uuid())
  name    String   @unique
  type    FormType
  order   Int      @default(autoincrement())
  style   Json?
  items   Json?
  section Int      @default(0)
  formId  String
  Form    Form     @relation(fields: [formId], references: [id])
}

enum FormType {
  SHORT
  LONG
  SINGLE_CHOICE
  MULTIPLE_CHOICE
  DROPDOWN
  CHECKBOX
  ATTACHMENT
  SLIDER
  DATE
}
